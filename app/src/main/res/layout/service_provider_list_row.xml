<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp">

    <ImageView
        android:id="@+id/service_proider_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/service_provider_image_desc"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">
    </ImageView>

    <TextView
        android:id="@+id/service_proider_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingStart="10dip"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/service_proider_image">
    </TextView>

    <TextView
        android:id="@+id/service_proider_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"	>
    </TextView>

    <TextView
        android:id="@+id/service_provider_desc_summary"
        android:layout_width="wrap_content"
        android:paddingLeft="10dip"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_proider_name"
        android:layout_toRightOf="@+id/service_proider_image"
        android:gravity="center_vertical">
    </TextView>

</RelativeLayout>